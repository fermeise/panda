# The path to the library files
library=panda-libary

# The path to the directory to be scanned for documents
# All subdirectories are scanned as well
# You can list as many paths as you like
path1=/path/to/documents
#path2=/another/path/with/documents

# The maximum levenshtein-distance of words to be suggested
max_edit_distance=3

# The number of results to be shown
number_of_results=20

# The maximum length of a snippet (in characters)
snippet_length=300

# Enable watching of directories (1 = enabled, 0 = disabled)
live_indexing=1

# Paths to pdf viewing software
pdfViewer=/path/to/your/pdf/viewer
#htmViewer=C:/Program Files (x86)/Google/Chrome/Application/chrome.exe
#htmlViewer=C:/Program Files (x86)/Google/Chrome/Application/chrome.exe
